@page
@model WebAppRazor.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="auth-card card">
            <div class="auth-header">
                <i class="fas fa-leaf"></i>
                <h3 class="mb-0 fw-bold">Đăng nhập NutriFood</h3>
                <p class="mb-0 mt-2" style="opacity:0.8">Chào mừng bạn trở lại!</p>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle me-2"></i>@Model.ErrorMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>@Model.SuccessMessage
                    </div>
                }

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Username" class="form-label">
                            <i class="fas fa-user me-1"></i> Tên đăng nhập
                        </label>
                        <input asp-for="Input.Username" class="form-control" placeholder="Nhập tên đăng nhập" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.Password" class="form-label">
                            <i class="fas fa-lock me-1"></i> Mật khẩu
                        </label>
                        <input asp-for="Input.Password" class="form-control" type="password" placeholder="Nhập mật khẩu" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-1"></i> Đăng nhập
                        </button>
                    </div>

                    <div class="text-center">
                        <p class="text-muted">Chưa có tài khoản?
                            <a asp-page="/Account/Register" class="fw-bold" style="color: var(--primary-green); text-decoration: none;">
                                Đăng ký ngay <i class="fas fa-arrow-right"></i>
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
