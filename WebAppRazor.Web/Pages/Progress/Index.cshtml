@page
@model WebAppRazor.Web.Pages.Progress.IndexModel
@{
    ViewData["Title"] = "Theo dõi tiến trình";
}

<h2 class="section-title mb-4"><i class="fas fa-chart-line me-2"></i>Theo dõi tiến trình</h2>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success"><i class="fas fa-check-circle me-2"></i>@Model.SuccessMessage</div>
}
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger"><i class="fas fa-exclamation-circle me-2"></i>@Model.ErrorMessage</div>
}

@if (Model.LatestProfile == null)
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        Bạn cần <a asp-page="/Health/Index" class="alert-link">cập nhật chỉ số sức khỏe</a> trước khi theo dõi tiến trình.
    </div>
}

<div class="row">
    <!-- Log new progress -->
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header-custom">
                <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Ghi nhận hôm nay</h5>
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-weight me-1"></i> Cân nặng (kg)</label>
                        <input asp-for="NewWeight" class="form-control" type="number" step="0.1" min="20" max="300" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-sticky-note me-1"></i> Ghi chú</label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Cảm nhận hôm nay..."></textarea>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i> Lưu tiến trình
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="col-md-8">
        @if (Model.ProgressHistory.Count > 0)
        {
            <div class="card mb-4">
                <div class="card-header-custom">
                    <h5 class="mb-0"><i class="fas fa-chart-area me-2"></i>Biểu đồ cân nặng</h5>
                </div>
                <div class="card-body p-4">
                    <canvas id="weightChart" height="200"></canvas>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header-custom">
                    <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Biểu đồ BMI & TDEE</h5>
                </div>
                <div class="card-body p-4">
                    <canvas id="metricsChart" height="200"></canvas>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Chưa có dữ liệu. Hãy ghi nhận cân nặng hôm nay!</p>
                </div>
            </div>
        }
    </div>
</div>

<!-- History table -->
@if (Model.ProgressHistory.Count > 0)
{
    <div class="card mt-4">
        <div class="card-header-custom">
            <h5 class="mb-0"><i class="fas fa-history me-2"></i>Lịch sử tiến trình</h5>
        </div>
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ngày</th>
                            <th>Cân nặng</th>
                            <th>BMI</th>
                            <th>BMR</th>
                            <th>TDEE</th>
                            <th>Ghi chú</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var entry in Model.ProgressHistory.OrderByDescending(p => p.RecordedAt))
                        {
                            <tr>
                                <td>@entry.RecordedAt.ToString("dd/MM/yyyy")</td>
                                <td><strong>@entry.Weight</strong> kg</td>
                                <td>@entry.BMI</td>
                                <td>@entry.BMR kcal</td>
                                <td>@entry.TDEE kcal</td>
                                <td>@entry.Notes</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var labels = @Html.Raw(Model.ChartLabels);
        var weights = @Html.Raw(Model.ChartWeights);
        var bmis = @Html.Raw(Model.ChartBMIs);
        var tdees = @Html.Raw(Model.ChartTDEEs);

        if (labels.length > 0) {
            // Weight Chart
            new Chart(document.getElementById('weightChart'), {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Cân nặng (kg)',
                        data: weights,
                        borderColor: '#2d8a4e',
                        backgroundColor: 'rgba(45,138,78,0.1)',
                        fill: true,
                        tension: 0.3,
                        pointRadius: 5,
                        pointBackgroundColor: '#2d8a4e'
                    }]
                },
                options: {
                    responsive: true,
                    plugins: { legend: { display: true } },
                    scales: { y: { beginAtZero: false } }
                }
            });

            // Metrics Chart
            new Chart(document.getElementById('metricsChart'), {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'BMI',
                            data: bmis,
                            backgroundColor: 'rgba(25,118,210,0.7)',
                            yAxisID: 'y'
                        },
                        {
                            label: 'TDEE (kcal)',
                            data: tdees,
                            backgroundColor: 'rgba(255,140,66,0.7)',
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    plugins: { legend: { display: true } },
                    scales: {
                        y: { type: 'linear', position: 'left', beginAtZero: false, title: { display: true, text: 'BMI' } },
                        y1: { type: 'linear', position: 'right', beginAtZero: false, title: { display: true, text: 'TDEE (kcal)' }, grid: { drawOnChartArea: false } }
                    }
                }
            });
        }
    </script>
}
